<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.encryption.fileencryption.HelloApplication">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Button fx:id="buttonChooseFile" onAction="#chooseFile" text="Choose A File">
      <font>
         <Font size="19.0" />
      </font></Button>
   <Label fx:id="labelFileLocation" alignment="CENTER" contentDisplay="CENTER" prefHeight="62.0" prefWidth="482.0" text="FIle Name" textAlignment="CENTER" wrapText="true">
      <font>
         <Font size="13.0" />
      </font>
   </Label>
   <TextField fx:id="textFieldKey" alignment="CENTER" prefHeight="46.0" prefWidth="760.0" promptText="Key">
      <font>
         <Font size="21.0" />
      </font>
   </TextField>
   <HBox alignment="CENTER" prefHeight="54.0" prefWidth="760.0" spacing="50.0">
      <children>
         <RadioButton fx:id="radioButtonEncrypt" mnemonicParsing="false" selected="true" text="Encrypt">
            <font>
               <Font size="19.0" />
            </font>
            <toggleGroup>
               <ToggleGroup fx:id="mode" />
            </toggleGroup>
         </RadioButton>
         <RadioButton fx:id="radioButtonDecrypt" mnemonicParsing="false" text="Decrypt" toggleGroup="$mode">
            <font>
               <Font size="19.0" />
            </font>
         </RadioButton>
      </children>
   </HBox>

    <Label fx:id="welcomeText" />
   <Button fx:id="buttonProcess" mnemonicParsing="false" onAction="#process" text="Process">
      <font>
         <Font size="19.0" />
      </font>
   </Button>
</VBox>
